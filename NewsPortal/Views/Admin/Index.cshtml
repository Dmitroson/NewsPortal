@model NewsPortal.Models.ArticleIndexViewModel
@using NewsPortal.Helpers;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@{
    var path = Server.MapPath("~/Images/");
    <p>@path</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Articles.FirstOrDefault().Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Articles.FirstOrDefault().Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Articles.FirstOrDefault().Visibility)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Articles.FirstOrDefault().PubDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Articles)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.Raw(item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visibility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PubDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<br />
<div class="btn-group">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { page = x }))
</div>