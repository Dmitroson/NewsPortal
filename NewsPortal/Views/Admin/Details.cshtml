@model Business.Models.Article

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>

    <h2 class="article-title title-details">
        @Html.DisplayFor(model => model.Title)
    </h2>

    <dl class="dl-horizontal">

        <dd class="details-article">

            <img src="@Model.ImageUrl" alt="image" class="details-img" />

            <div class="article-del-desc details-desc">
                @Html.Raw(Model.Description)
            </div>

        </dd>

        <dt>
            @Resources.Resource.Visibility
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Visibility)
        </dd>

        <dt>
            @Resources.Resource.PubDate
        </dt>

        <dd class="pubDate">
            @Model.PubDate
        </dd>

    </dl>

</div>

<p>
    @Html.ActionLink(Resources.Resource.Edit, "Edit", new { id = Model.Id }) |
    @Html.ActionLink(Resources.Resource.BackToList, "Index")
</p>

<p>
    @Html.Action("Create", "Comment", new { articleId = Model.Id })
    @Html.Action("CommentsList", "Comment", new { articleId = Model.Id })
</p>

@Scripts.Render("~/Scripts/converterToLocalTime.js")