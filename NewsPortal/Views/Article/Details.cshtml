@model NewsPortal.Models.Article

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2 class="article-title title-details">
        @Html.DisplayFor(model => model.Title)
    </h2>

<div>

    <dl class="dl-horizontal">

        <dd>
            <img src="@Model.ImageUrl" alt="image" class="details-img" />
        </dd>

        <dd class="article-desc details-desc">
            @Html.Raw(Model.Description)
        </dd>

        <dd class="details-date">
            @Model.PubDate.Value.AddHours(3)
        </dd>

    </dl>

</div>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>

<p>
    @Html.Action("CreateComment")
    @Html.Action("GetComments", new { id = Model.Id })
</p>