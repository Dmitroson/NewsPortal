@model IEnumerable<Business.Models.Comment>

<link rel="stylesheet" type="text/css" href="~/Content/Site.css" />

@{
    string controllerName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
}

@foreach (var comment in Model)
{
    <article class="comment">
        <div class="commentuser">@comment.UserName</div>
        <div class="commentdate">@comment.PubDate.Value.AddHours(3).ToString("dd.MM.yyyy hh:mm")</div>
        <div class="commenttext">@comment.Text</div>
    </article>
    if (controllerName == "Admin")
    {
        @Html.ActionLink("Open popup", "SureDelete", comment, new { @class = "viewDialog" })

        <br />
    }
}
<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>

<script type="text/javascript">

    $(function () {
        $.ajaxSetup({ cache: false });
        $(".viewDialog").click(function (e) {

            e.preventDefault();
            $.get(this.href, function (data) {
                $('#dialogContent').html(data);
                $('#modDialog').modal('show');
            });
        });
    })
</script>